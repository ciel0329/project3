<mapper namespace="productQnaDAO">

	<insert id="insertPrdQna" parameterType="com.spring.mall.product.vo.ProductQnaVO">
		<!-- INSERT INTO PRODUCT_QNA (QNA_ID,QNA_CONTENT,PRODUCT_ID,USER_ID)
		VALUES ((SELECT NVL(MAX(QNA_ID),0) + 1 FROM PRODUCT_QNA),'많이 맵나요',88,'bab') -->
	</insert>
	
	<select id="getPrdQnaList" parameterType="com.spring.mall.product.vo.ProductQnaVO"
		resultType="com.spring.mall.product.vo.ProductQnaVO">
		SELECT *
		FROM PRODUCT_QNA
		WHERE PRODUCT_ID = #{product_id}
	</select>
	
